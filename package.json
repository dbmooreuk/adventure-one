{
  "name": "adventure-game-modern",
  "version": "1.0.0",
  "description": "Modern JavaScript Adventure Game with ES6+ modules and best practices",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "sass:watch": "sass --watch src/styles/main.scss:src/styles/main.css --style expanded",
    "sass:build": "sass src/styles/main.scss:src/styles/main.css --style compressed",
    "dev": "npm run sass:watch & vite",
    "dev:network": "npm run sass:watch & vite --host",
    "build": "npm run sass:build && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "sass": "^1.69.0"
  },
  "dependencies": {
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  }
}
